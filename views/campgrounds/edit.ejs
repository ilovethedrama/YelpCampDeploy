<% include ../partials/header %>
<div class="container">
    <div class="row">
<!--plot is the value passed in from the edit route and so is used here too -->
        <div style='width:30%; margin: 0 auto'>
        <h1>Edit <%= plot.name %></h1>
     <!-- the form action translates to campgrounds/:id/ (as in the one that was just edited) -->
        <form action='/campgrounds/<%= plot._id %>?_method=PUT' method='POST' enctype='multipart/form-data'>
            <div class="form-group field">
                <label>Title</label>
                <input class='form-control' type='text' name=plot[name] value= <%= plot.name %>>
            </div>
            
            <div class="form-group">
                <label>Image</label>
                <input class='form-control' type='file' name='plot[pic]' placeholder='image' id='pix' accept='image/*' value=<%= plot.pic %>>
            </div>
    
            <div class="form-group">
                <label>Availability Date</label>
                <input class='form-control' type='text' name=plot[avDate] value='ready from?' value=<%= plot.avDate %>>
            </div>
    
            <div class="form-group">
                <label>Price</label>
                <input class='form-control' type='number' name=plot[price] value='<%= plot.price %>' min='0.00' step='0.1'>
                <!--storing the price as a string in the campground model allows easier formatting
                the step allows for 1p incremnts when setting the price-->
            </div>
            
            <div class="form-group">
                <label>Description</label>
                <textarea rows='10' cols='35' name=plot[desc] placeholder='  Additional Site Info' value=<%= plot.desc %>></textarea>
            </div>
            <div class="form-group">
                <button class='btn btn-lg btn-primary btn-block'>Submit entry</button>        
            </div>
        </form> 
    <a href='/campgrounds'>See Current Campsites</a>
</div>
        
    </div>
</div>
<% include ../partials/footer %>
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div style='width:30%; margin: 0 auto'>
        <h2>New Entry</h2>
        <form action='/campgrounds' method='POST' enctype='multipart/form-data'><!--needed for file upload to rec. form-->
            <div class="form-group field">
                <label>Title</label>
                <input class='form-control' type='text' name='campground[name]' placeholder='Campground title'>
            </div>
            
            <div class="form-group">
                <label>Image</label>
                <input class='form-control' type='file' name='pic' placeholder='Image' id='pix' accept='image/*'>
            </div> <!--the accept='image/* will only permit image files to be uploaded-->
    
            <div class="form-group">
                <label>Availability Date</label>
                <input class='form-control' type='text' name='campground[avDate]' placeholder='Ready from?'>
            </div>
    
                <div class="form-group">
                    <label>Price</label>
                    <div class='input-group'>
                    <span class='input-group-addon'>Â£</span>
                    <input class='form-control' type='number' name='campground[price]' placeholder='Retail price' min='0.01' step='0.01'>
                    <!--storing the price as a string in the campground model allows easier formatting
                    the step allows for 1p incremnts when setting the price-->
                    <span class='input-group-addon'>Per Night</span>
                    </div>
                </div>
    
            <!--<div class="form-group">-->
            <!--    <label>Description</label>-->
            <!--    <textarea rows='10' cols='35' name='desc' placeholder='Additional Site Info'></textarea>-->
            <!--</div>-->
            
            <div class="form-group">
                <button class='btn btn-lg btn-primary btn-block'>Submit entry</button>        
            </div>
        </form> 
    <a href='/campgrounds'>See Current Campsites</a>
</div>
        
    </div>
</div>
